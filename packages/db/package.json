{
  "name": "@repo/db",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
