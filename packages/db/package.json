{
  "name": "@repo/db",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    "./migrations": "./dist/migrations.js",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "check-types": "tsc --noEmit",
    "clean": "rimraf .turbo node_modules dist",
    "db:schema": "drizzle-kit generate",
    "db:migrate": "tsx src/migrate.ts",
    "db:seed:webhooks": "tsx src/seed/webhooks.ts",
    "db:seed:activities": "tsx src/seed/activities.ts",
    "db:seed:import": "tsx src/seed/import.ts",
    "db:seed:clear": "tsx src/seed/clear.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@libsql/client": "0.15.4",
    "@repo/dates": "workspace:*",
    "@repo/types": "workspace:*",
    "drizzle-orm": "0.41.0",
    "p-map": "7.0.3",
    "uuidv7": "1.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "9.6.0",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "22.12.0",
    "dotenv": "16.4.7",
    "drizzle-kit": "0.30.5",
    "fs-extra": "11.3.0",
    "rimraf": "6.0.1",
    "tsup": "8.4.0",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "vitest": "3.0.8"
  }
}
